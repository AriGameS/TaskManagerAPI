# Production Environment Configuration Example
# Copy this file to terraform.tfvars and customize the values

# Project Configuration
project_name = "taskmanager"
environment  = "prod"
aws_region   = "us-west-2"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24", "10.0.30.0/24"]

# Application Configuration
app_port        = 5125
container_image = "your-account.dkr.ecr.us-west-2.amazonaws.com/taskmanager:latest"

# ALB Configuration
certificate_arn = "arn:aws:acm:us-west-2:123456789012:certificate/12345678-1234-1234-1234-123456789012"
enable_deletion_protection = true
enable_access_logs = true
log_retention_days = 30

# ECS Configuration
ecs_cpu             = 1024
ecs_memory          = 2048
ecs_desired_count   = 3
ecs_min_capacity    = 2
ecs_max_capacity    = 20
enable_autoscaling  = true
enable_container_insights = true

# Database Configuration
db_name    = "taskmanager"
db_username = "taskmanager"
db_instance_class = "db.t3.small"
db_allocated_storage = 100
db_max_allocated_storage = 1000
db_backup_retention_period = 30
db_multi_az = true
db_deletion_protection = true
db_skip_final_snapshot = false
db_performance_insights_enabled = true

# Environment Variables
environment_variables = [
  {
    name  = "FLASK_ENV"
    value = "production"
  },
  {
    name  = "PYTHONUNBUFFERED"
    value = "1"
  }
]

# DNS Configuration
domain_name = "api.taskmanager.com"
route53_zone_id = "Z1234567890ABCDEF"

# Alerting Configuration
alert_emails = [
  "admin@taskmanager.com",
  "devops@taskmanager.com"
]

# Tags
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Environment = "Production"
  Backup      = "Daily"
}
